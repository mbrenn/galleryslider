@model BurnSystems.GallerySlider.Model.GalleryModel

@{
    ViewBag.Title = "Die Bilder Galerie";
    Layout = "~/Views/Shared/_Fullscreen.cshtml";
}

<img id="galleryimage" class="galleryimage" />
<div class="gallerygui">
    <div class="galleryheadline">
        <h1 class="gallerytitle"><a href="@Href("~/")">@Html.DisplayFor(m => m.name) - <span class="gallerylabel" id="gallerylabel"></span></a></h1>
        
    </div>
    <a id="galleryprev" href="#" class="gallerybutton galleryprev">Previous</a>
    <a id="gallerynext" href="#" class="gallerybutton gallerynext">Next</a>
</div>


<script type="text/javascript">
        $(function()
        {
            var x = @Html.Raw(ViewBag.GalleryModel)
            BurnSystems.GallerySlider.startGallery(x);
        });
</script>